<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://consultationRecordBrowse.caption"
        focusComponent="consultationRecordsTable"
        messagesPack="com.company.medicalrecord.web.screens.consultationrecord">
    <data readOnly="true">
        <collection id="consultationRecordsDc"
                    class="com.company.medicalrecord.entity.ConsultationRecord">
            <view extends="_local">
                <property name="diagnosis" view="_minimal">
                    <property name="name"/>
                </property>
                <property name="description" view="_minimal">
                    <property name="complaints"/>
                    <property name="anamnesis"/>
                    <property name="objectively"/>
                    <property name="conclusion"/>
                </property>
            </view>
            <loader id="consultationRecordsDl">
                <query>
                    <![CDATA[select e from medicalrecord_ConsultationRecord e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="consultationRecordsTable"
            spacing="true">
        <filter id="filter"
                applyTo="consultationRecordsTable"
                dataLoader="consultationRecordsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="consultationRecordsTable"
                    width="100%"
                    dataContainer="consultationRecordsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="diagnosis.icd10Name"/>
                <column id="diagnosis.name"/>
                <column id="description.complaints"/>
                <column id="description.anamnesis"/>
                <column id="description.objectively"/>
                <column id="description.conclusion"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="consultationRecordsTable.create"/>
                <button id="editBtn" action="consultationRecordsTable.edit"/>
                <button id="removeBtn" action="consultationRecordsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>

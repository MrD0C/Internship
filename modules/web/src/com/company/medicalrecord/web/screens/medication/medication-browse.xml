<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://medicationBrowse.caption"
        focusComponent="medicationsTable"
        messagesPack="com.company.medicalrecord.web.screens.medication">
    <data readOnly="true">
        <collection id="medicationsDc"
                    class="com.company.medicalrecord.entity.Medication">
            <view extends="_local"/>
            <loader id="medicationsDl">
                <query>
                    <![CDATA[select e from medicalrecord_Medication e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="medicationsTable"
            spacing="true">
        <groupTable id="medicationsTable"
                    width="100%"
                    dataContainer="medicationsDc" reorderingAllowed="false" contextMenuEnabled="false">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="medicineName"/>
                <column id="intakeRecommendation"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="medicationsTable.create"/>
                <button id="editBtn" action="medicationsTable.edit"/>
                <button id="removeBtn" action="medicationsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>

<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://examinationRecordEdit.caption"
        focusComponent="form"
        messagesPack="com.company.medicalrecord.web.screens.examinationrecord">
    <data>
        <instance id="examinationRecordDc"
                  class="com.company.medicalrecord.entity.record.ExaminationRecord">
            <view extends="_local">
                <property name="diagnosis" view="_minimal">
                    <property name="name"/>
                </property>
                <property name="description" view="_minimal">
                    <property name="complaints"/>
                    <property name="anamnesis"/>
                    <property name="objectively"/>
                    <property name="conclusion"/>
                </property>
                <property name="creationInfo" view="_minimal">
                    <property name="clinicName"/>
                    <property name="doctorSurname"/>
                </property>
                <property name="treatmentPlans" view="_minimal">
                    <property name="treatmentType"/>
                    <property name="name"/>
                    <property name="date"/>
                </property>
            </view>
            <loader/>
            <collection id="treatmentPlansDc" property="treatmentPlans"/>
        </instance>
    </data>
    <dialogMode height="auto"
                width="auto"/>
    <layout expand="editActions" spacing="true">
        <hbox id="hBoxInfo" spacing="true" expand="vBoxMainInfo">
            <vbox id="vBoxMainInfo" spacing="true">
                <vbox id="vBoxExamineInfo" spacing="true">
                    <label id="labelExamination" value="Name" stylename="bold h2"/>
                    <textField id="examinationTypeField" dataContainer="examinationRecordDc" property="examinationType" inputPrompt="Type of examination"
                               width="500"/>
                    <textField id="nameField" dataContainer="examinationRecordDc" property="name" inputPrompt="Examination name"
                               width="500"/>
                </vbox>
                <vbox id="vBoxDiagnosisInfo" spacing="true">
                    <label id="labelDiagnosis" value="Diagnosis" stylename="bold h2"/>
                    <textField id="diagnosisIcd10NameField" dataContainer="examinationRecordDc" property="diagnosis.icd10Name" inputPrompt="ICD-10 name or code"
                               width="500"/>
                    <textField id="diagnosisNameField" dataContainer="examinationRecordDc" property="diagnosis.name" inputPrompt="Diagnosis: in free-form"
                               width="500"/>
                </vbox>
                <vbox id="vBoxDescription" spacing="true">
                    <label id="labelDescription" value="Description" stylename="bold h2"/>
                    <textArea id="descriptionComplaintsField" dataContainer="examinationRecordDc" property="description.complaints" rows="5" inputPrompt="Complains"
                              width="500" height="75"/>
                    <textArea id="descriptionAnamnesisField" dataContainer="examinationRecordDc" property="description.anamnesis" rows="5" inputPrompt="Anamnesis"
                              width="500" height="75"/>
                    <textArea id="descriptionObjectivelyField" dataContainer="examinationRecordDc" property="description.objectively" rows="5" inputPrompt="Objectively"
                              width="500" height="75"/>
                    <textArea id="descriptionConclusionField" dataContainer="examinationRecordDc" property="description.conclusion" rows="5" inputPrompt="Conclusion"
                              width="500" height="75"/>
                </vbox>
            </vbox>
            <vbox id="vBoxCreationInfo" spacing="true" margin="false,true,false,true">
                <label id="labelCreationInfo" value="Created by" stylename="bold h2"/>
                <textField id="creationInfoClinicNameField" dataContainer="examinationRecordDc" property="creationInfo.clinicName"
                           inputPrompt="Clinic name"
                           width="200" height="30"/>
                <textField id="creationInfoDoctorSurnameField" dataContainer="examinationRecordDc" property="creationInfo.doctorSurname" inputPrompt="Doctor's surname"
                           height="30" width="200"/>
                <dateField id="creationInfoDateField" dataContainer="examinationRecordDc" property="creationInfo.date"
                           width="200"/>
            </vbox>
        </hbox>
        <form id="form" dataContainer="examinationRecordDc" visible="false">
            <column width="350px">
            </column>
        </form>
        <label id="labelTreatmentPlans" value="Treatment plans" stylename="bold h2"/>
        <button id="buttonAddTreatmentPlan" caption="Add a treatment plan" width="500" stylename="friendly"/>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>

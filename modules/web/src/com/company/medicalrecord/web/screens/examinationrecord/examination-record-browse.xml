<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://examinationRecordBrowse.caption"
        focusComponent="examinationRecordsTable"
        messagesPack="com.company.medicalrecord.web.screens.examinationrecord">
    <data readOnly="true">
        <collection id="examinationRecordsDc"
                    class="com.company.medicalrecord.entity.record.ExaminationRecord">
            <view extends="_local">
                <property name="diagnosis" view="_minimal"/>
                <property name="creationInfo" view="_minimal"/>
            </view>
            <loader id="examinationRecordsDl">
                <query>
                    <![CDATA[select e from medicalrecord_ExaminationRecord e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="examinationRecordsTable"
            spacing="true">
        <groupTable id="examinationRecordsTable"
                    width="100%"
                    dataContainer="examinationRecordsDc">
            <actions>
                <action id="create" type="create">
                    <properties>
                        <property name="openMode" value="DIALOG"/>
                    </properties>
                </action>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="examinationType"/>
                <column id="name"/>
                <column id="diagnosis.icd10Name"/>
                <column id="creationInfo.date"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="examinationRecordsTable.create"/>
                <button id="editBtn" action="examinationRecordsTable.edit"/>
                <button id="removeBtn" action="examinationRecordsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>

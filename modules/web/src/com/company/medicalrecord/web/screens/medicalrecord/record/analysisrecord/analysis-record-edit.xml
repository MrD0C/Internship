<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://analysisRecordEdit.caption"
        messagesPack="com.company.medicalrecord.web.screens.medicalrecord.record.analysisrecord">
    <data>
        <instance id="analysisRecordDc"
                  class="com.company.medicalrecord.entity.record.AnalysisRecord">
            <view extends="_local">
                <property name="creationInfo" view="_minimal">
                    <property name="clinicName"/>
                    <property name="doctorSurname"/>
                </property>
                <property name="indicators" view="_minimal">
                    <property name="norm"/>
                    <property name="unit"/>
                    <property name="comment"/>
                </property>
            </view>
            <loader/>
            <collection id="indicatorsDc" property="indicators"/>
        </instance>
    </data>
    <dialogMode height="auto"
                width="auto"/>
    <layout spacing="true">
        <scrollBox id="scrollBox" width="AUTO">
            <hbox id="analysisHBox" spacing="true">
                <vbox id="analysisVBox" spacing="true">
                    <label id="analysisLabel" value="msg://analysisLabel.value" stylename="bold h2"/>
                    <textField id="nameField" dataContainer="analysisRecordDc" property="name" inputPrompt="msg://nameField.inputPrompt"
                               width="500"/>
                    <textArea id="conclusionField" dataContainer="analysisRecordDc" property="conclusion" inputPrompt="msg://conclusionField.inputPrompt"
                              width="500" height="70"/>
                </vbox>
                <vbox id="creationInfoVBox" spacing="true">
                    <label id="creationInfoLabel" value="msg://creationInfoLabel.value" stylename="bold h2"/>
                    <textField id="creationInfoClinicNameField" dataContainer="analysisRecordDc" property="creationInfo.clinicName"
                               inputPrompt="msg://creationInfoClinicNameField.inputPrompt"/>
                    <textField id="creationInfoDoctorSurnameField" dataContainer="analysisRecordDc" property="creationInfo.doctorSurname"
                               inputPrompt="msg://creationInfoDoctorSurnameField.inputPrompt"/>
                    <dateField id="creationInfoDateField" dataContainer="analysisRecordDc" property="creationInfo.date"/>
                </vbox>
            </hbox>
        </scrollBox>
        <label id="indicatorLabel" value="msg://indicatorLabel.value" stylename="bold h2"/>
        <dataGrid id="analysisIndicatorsTable" height="auto" width="100%" dataContainer="indicatorsDc"
                  reorderingAllowed="false" settingsEnabled="false" columnsCollapsingAllowed="false">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <buttonsPanel alwaysVisible="true">
                <button id="analysisIndicatorsTableCreateBtn" action="analysisIndicatorsTable.create"/>
                <button id="analysisIndicatorsTableEditBtn" action="analysisIndicatorsTable.edit"/>
                <button id="analysisIndicatorsTableRemoveBtn" action="analysisIndicatorsTable.remove"/>
            </buttonsPanel>
            <columns>
                <column id="name" property="name"/>
                <column id="result" property="result"/>
                <column id="norm" property="norm"/>
                <column id="unit" property="unit"/>
                <column id="comment" property="comment"/>
            </columns>
        </dataGrid>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>

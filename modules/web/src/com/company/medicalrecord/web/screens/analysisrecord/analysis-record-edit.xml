<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://analysisRecordEdit.caption"
        focusComponent="form"
        messagesPack="com.company.medicalrecord.web.screens.analysisrecord">
    <data>
        <instance id="analysisRecordDc"
                  class="com.company.medicalrecord.entity.record.AnalysisRecord">
            <view extends="_local">
                <property name="creationInfo" view="_minimal">
                    <property name="clinicName"/>
                    <property name="doctorSurname"/>
                </property>
                <property name="indicators" view="_minimal">
                    <property name="norm"/>
                    <property name="unit"/>
                    <property name="comment"/>
                </property>
            </view>
            <loader/>
            <collection id="indicatorsDc" property="indicators"/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="analysisRecordDc">
            <column width="350px">
                <textField id="nameField" property="name"/>
                <textField id="conclusionField" property="conclusion"/>
                <dateField id="creationInfoDateField" property="creationInfo.date"/>
                <textArea id="creationInfoClinicNameField" property="creationInfo.clinicName" rows="5"/>
                <textField id="creationInfoDoctorSurnameField" property="creationInfo.doctorSurname"/>
            </column>
        </form>
        <groupBox id="indicatorsBox" caption="msg://com.company.medicalrecord.entity.record/AnalysisRecord.indicators">
            <table id="indicatorsTable" dataContainer="indicatorsDc" width="100%" height="200px">
                <actions>
                    <action id="create" type="create"/>
                    <action id="edit" type="edit"/>
                    <action id="remove" type="remove"/>
                </actions>
                <columns>
                    <column id="name"/>
                    <column id="result"/>
                    <column id="norm"/>
                    <column id="unit"/>
                    <column id="comment"/>
                </columns>
                <buttonsPanel>
                    <button action="indicatorsTable.create"/>
                    <button action="indicatorsTable.edit"/>
                    <button action="indicatorsTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>

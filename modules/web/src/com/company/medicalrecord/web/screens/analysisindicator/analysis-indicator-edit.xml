<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://analysisIndicatorEdit.caption"
        focusComponent="form"
        messagesPack="com.company.medicalrecord.web.screens.analysisindicator">
    <data>
        <instance id="analysisIndicatorDc"
                  class="com.company.medicalrecord.entity.AnalysisIndicator">
            <view extends="_local"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="auto"
                width="auto"/>
    <layout expand="editActions" spacing="true">
        <vbox id="vBoxIndicator" spacing="true">
            <label id="labelIndicator" value="Indicator" stylename="bold h2"/>
            <textField id="nameField" dataContainer="analysisIndicatorDc" property="name" width="530px" inputPrompt="Name"/>
            <hbox id="hBoxIndicatorResult" spacing="true">
                <textField id="resultField" dataContainer="analysisIndicatorDc" property="result" width="100" inputPrompt="Result"/>
                <textField id="normField" dataContainer="analysisIndicatorDc" property="norm" width="100" inputPrompt="Norm"/>
                <textField id="unitField" dataContainer="analysisIndicatorDc" property="unit" width="100" inputPrompt="Unit"/>
                <textField id="commentField" dataContainer="analysisIndicatorDc" property="comment" width="200" inputPrompt="Comment"/>
            </hbox>
        </vbox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
        <form id="form" dataContainer="analysisIndicatorDc" visible="false">
            <column width="350px">
            </column>
        </form>
    </layout>
</window>

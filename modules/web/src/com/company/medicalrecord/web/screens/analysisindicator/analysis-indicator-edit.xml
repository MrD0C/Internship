<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://analysisIndicatorEdit.caption"
        messagesPack="com.company.medicalrecord.web.screens.analysisindicator">
    <data>
        <instance id="analysisIndicatorDc"
                  class="com.company.medicalrecord.entity.AnalysisIndicator">
            <view extends="_local"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="auto"
                width="auto"/>
    <layout expand="editActions" spacing="true">
        <vbox id="indicatorVBox" spacing="true">
            <label id="indicatorLabel" value="msg://indicatorLabel.value" stylename="bold h2"/>
            <textField id="nameField" dataContainer="analysisIndicatorDc" property="name" width="530px" inputPrompt="msg://nameField.inputPrompt"/>
            <hbox id="indicatorResultVBox" spacing="true">
                <textField id="resultField" dataContainer="analysisIndicatorDc" property="result" width="100" inputPrompt="msg://resultField.inputPrompt"/>
                <textField id="normField" dataContainer="analysisIndicatorDc" property="norm" width="100" inputPrompt="msg://normField.inputPrompt"/>
                <textField id="unitField" dataContainer="analysisIndicatorDc" property="unit" width="100" inputPrompt="msg://unitField.inputPrompt"/>
                <textField id="commentField" dataContainer="analysisIndicatorDc" property="comment" width="200" inputPrompt="msg://commentField.inputPrompt"/>
            </hbox>
        </vbox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>

<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://treatmentPlanEdit.caption"
        focusComponent="form"
        messagesPack="com.company.medicalrecord.web.screens.treatmentplan">
    <data>
        <instance id="treatmentPlanDc"
                  class="com.company.medicalrecord.entity.TreatmentPlan">
            <view extends="_local"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="treatmentPlanDc">
            <column width="350px">
                <lookupField id="treatmentTypeField" property="treatmentType"/>
                <textArea id="titleField" property="title" rows="5"/>
                <textArea id="nameField" property="name" rows="5"/>
                <dateField id="dateField" property="date"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>

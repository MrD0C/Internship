<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://treatmentPlanEdit.caption"
        messagesPack="com.company.medicalrecord.web.screens.treatmentplan">
    <data>
        <instance id="treatmentPlanDc"
                  class="com.company.medicalrecord.entity.TreatmentPlan">
            <view extends="_local"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="auto"
                width="auto"/>
    <layout expand="editActions" spacing="true">
        <vbox id="treatmentPlanVBox" spacing="true">
            <label id="treatmentPlanLabel" value="Treatment Plan" stylename="bold h2"/>
            <lookupField id="treatmentTypeField" dataContainer="treatmentPlanDc" property="treatmentType" inputPrompt="Treatment plan"/>
            <dateField id="dateField" dataContainer="treatmentPlanDc" property="date"/>
            <textField id="titleField" dataContainer="treatmentPlanDc" property="title" inputPrompt="Title"
                       width="500"/>
            <textField id="nameField" dataContainer="treatmentPlanDc" property="name" inputPrompt="Title in free-form"
                       width="500"/>
        </vbox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>

<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://pulseMonitoringBrowse.caption"
        focusComponent="pulseMonitoringsTable"
        messagesPack="com.company.medicalrecord.web.screens.pulsemonitoring">
    <data readOnly="true">
        <collection id="pulseMonitoringsDc"
                    class="com.company.medicalrecord.entity.monitoring.PulseMonitoring">
            <view extends="_local"/>
            <loader id="pulseMonitoringsDl">
                <query>
                    <![CDATA[select e from medicalrecord_PulseMonitoring e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="pulseMonitoringsTable"
            spacing="true">
        <groupTable id="pulseMonitoringsTable"
                    width="100%"
                    dataContainer="pulseMonitoringsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="value"/>
                <column id="unit"/>
                <column id="localDateTime"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="pulseMonitoringsTable.create"/>
                <button id="editBtn" action="pulseMonitoringsTable.edit"/>
                <button id="removeBtn" action="pulseMonitoringsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>

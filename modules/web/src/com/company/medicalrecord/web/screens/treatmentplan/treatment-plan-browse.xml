<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://treatmentPlanBrowse.caption"
        focusComponent="treatmentPlansTable"
        messagesPack="com.company.medicalrecord.web.screens.treatmentplan">
    <data readOnly="true">
        <collection id="treatmentPlansDc"
                    class="com.company.medicalrecord.entity.TreatmentPlan">
            <view extends="_local"/>
            <loader id="treatmentPlansDl">
                <query>
                    <![CDATA[select e from medicalrecord_TreatmentPlan e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="treatmentPlansTable"
            spacing="true">
        <groupTable id="treatmentPlansTable"
                    width="100%"
                    dataContainer="treatmentPlansDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="treatmentType"/>
                <column id="title"/>
                <column id="name"/>
                <column id="date"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="treatmentPlansTable.create"/>
                <button id="editBtn" action="treatmentPlansTable.edit"/>
                <button id="removeBtn" action="treatmentPlansTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>

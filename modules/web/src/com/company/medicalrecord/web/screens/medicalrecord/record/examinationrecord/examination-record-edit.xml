<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://examinationRecordEdit.caption"
        messagesPack="com.company.medicalrecord.web.screens.medicalrecord.record.examinationrecord">
    <data>
        <instance id="examinationRecordDc"
                  class="com.company.medicalrecord.entity.record.ExaminationRecord">
            <view extends="_local">
                <property name="diagnosis" view="_minimal">
                    <property name="name"/>
                </property>
                <property name="description" view="_minimal">
                    <property name="complaints"/>
                    <property name="anamnesis"/>
                    <property name="objectively"/>
                    <property name="conclusion"/>
                </property>
                <property name="creationInfo" view="_minimal">
                    <property name="clinicName"/>
                    <property name="doctorSurname"/>
                </property>
                <property name="treatmentPlans" view="_minimal">
                    <property name="treatmentType"/>
                    <property name="name"/>
                    <property name="date"/>
                </property>
            </view>
            <loader/>
            <collection id="treatmentPlansDc" property="treatmentPlans"/>
        </instance>
    </data>
    <dialogMode height="auto"
                width="auto"/>
    <layout expand="editActions" spacing="true">
        <scrollBox id="scrollBox" width="AUTO">
            <hbox id="examinationHBox" spacing="true">
                <scrollBox id="examinationInfoVBox" spacing="true">
                    <vbox id="examinationVBox" spacing="true">
                        <label id="examinationInfo" value="msg://examinationInfo.value" stylename="bold h2"/>
                        <textField id="examinationTypeField" dataContainer="examinationRecordDc" property="examinationType" inputPrompt="msg://examinationTypeField.inputPrompt"
                                   width="500"/>
                        <textField id="nameField" dataContainer="examinationRecordDc" property="name" inputPrompt="msg://nameField.inputPrompt"
                                   width="500"/>
                    </vbox>
                    <vbox id="diagnosisIVBox" spacing="true">
                        <label id="diagnosisLabel" value="msg://diagnosisLabel.value" stylename="bold h2"/>
                        <textField id="diagnosisIcd10NameField" dataContainer="examinationRecordDc" property="diagnosis.icd10Name" inputPrompt="msg://diagnosisIcdNameField.inputPrompt"
                                   width="500"/>
                        <textField id="diagnosisNameField" dataContainer="examinationRecordDc" property="diagnosis.name" inputPrompt="msg://diagnosisNameField.inputPrompt"
                                   width="500"/>
                    </vbox>
                    <vbox id="descriptionVBox" spacing="true">
                        <label id="labelDescription" value="msg://labelDescription.value" stylename="bold h2"/>
                        <textArea id="descriptionComplaintsField" dataContainer="examinationRecordDc" property="description.complaints" rows="5" inputPrompt="msg://descriptionComplaintsField.inputPrompt"
                                  width="500" height="75"/>
                        <textArea id="descriptionAnamnesisField" dataContainer="examinationRecordDc" property="description.anamnesis" rows="5" inputPrompt="msg://descriptionAnamnesisField.inputPrompt"
                                  width="500" height="75"/>
                        <textArea id="descriptionObjectivelyField" dataContainer="examinationRecordDc" property="description.objectively" rows="5" inputPrompt="msg://descriptionObjectivelyField.inputPrompt"
                                  width="500" height="75"/>
                        <textArea id="descriptionConclusionField" dataContainer="examinationRecordDc" property="description.conclusion" rows="5" inputPrompt="msg://descriptionConclusionField.inputPrompt"
                                  width="500" height="75"/>
                    </vbox>
                </scrollBox>
                <vbox id="creationInfoVBox" spacing="true" margin="false,true,false,true">
                    <label id="creationInfoLabel" value="msg://creationInfoLabel.value" stylename="bold h2"/>
                    <textField id="creationInfoClinicNameField" dataContainer="examinationRecordDc" property="creationInfo.clinicName"
                               inputPrompt="msg://creationInfoClinicNameField.inputPrompt"
                               width="200" height="auto"/>
                    <textField id="creationInfoDoctorSurnameField" dataContainer="examinationRecordDc" property="creationInfo.doctorSurname" inputPrompt="msg://creationInfoDoctorSurnameField.inputPrompt"
                               height="auto" width="200"/>
                    <dateField id="creationInfoDateField" dataContainer="examinationRecordDc" property="creationInfo.date"
                               width="200"/>
                </vbox>
            </hbox>
        </scrollBox>
        <label id="treatmentPlanLabel" value="msg://treatmentPlanLabel.value" stylename="bold h2"/>
        <dataGrid id="treatmentPlansTable" width="100%" dataContainer="treatmentPlansDc" reorderingAllowed="false"
                  settingsEnabled="false" columnsCollapsingAllowed="false">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
                <action id="view" type="view"/>
            </actions>
            <buttonsPanel alwaysVisible="true">
                <button id="treatmentPlansTableCreateBtn" action="treatmentPlansTable.create" stylename="friendly"/>
                <button id="treatmentPlansTableEditBtn" action="treatmentPlansTable.edit"/>
                <button id="treatmentPlansTableRemoveBtn" action="treatmentPlansTable.remove" stylename="danger"/>
                <button id="treatmentPlansTableViewBtn" action="treatmentPlansTable.view"/>
            </buttonsPanel>
            <columns>
                <column id="treatmentType" property="treatmentType"/>
                <column id="title" property="title"/>
                <column id="name" property="name"/>
                <column id="date" property="date"/>
            </columns>
        </dataGrid>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>

<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://monitoringScreen.caption"
        messagesPack="com.company.medicalrecord.web.screens.monitoring"
        xmlns:chart="http://schemas.haulmont.com/charts/charts.xsd">
    <data>
        <collection id="weightMonitoringsDc" class="com.company.medicalrecord.entity.WeightMonitoring">
            <view extends="_local"/>
            <loader id="weightMonitoringsDl">
                <query>
                    <![CDATA[select e from medicalrecord_WeightMonitoring e]]>
                </query>
            </loader>
        </collection>
    </data>
    <layout>
        <chart:serialChart id="orderHistoryChart"
                           categoryField="date"
                           dataContainer="weightMonitoringsDc"
                           width="100%">
            <chart:graphs>
                <chart:graph valueField="value"/>
            </chart:graphs>
        </chart:serialChart>
    </layout>
</window>
<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://analysisRecordBrowse.caption"
        focusComponent="analysisRecordsTable"
        messagesPack="com.company.medicalrecord.web.screens.medicalrecord.record.analysisrecord">
    <data readOnly="true">
        <collection id="analysisRecordsDc"
                    class="com.company.medicalrecord.entity.record.AnalysisRecord">
            <view extends="_local">
                <property name="creationInfo" view="_minimal">
                    <property name="clinicName"/>
                    <property name="doctorSurname"/>
                </property>
            </view>
            <loader id="analysisRecordsDl">
                <query>
                    <![CDATA[select e from medicalrecord_AnalysisRecord e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="analysisRecordsTable"
            spacing="true">
        <groupTable id="analysisRecordsTable"
                    width="100%"
                    dataContainer="analysisRecordsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="conclusion"/>
                <column id="creationInfo.date"/>
                <column id="creationInfo.clinicName"/>
                <column id="creationInfo.doctorSurname"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="analysisRecordsTable.create"/>
                <button id="editBtn" action="analysisRecordsTable.edit"/>
                <button id="removeBtn" action="analysisRecordsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>

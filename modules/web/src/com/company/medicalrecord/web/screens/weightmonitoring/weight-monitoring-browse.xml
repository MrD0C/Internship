<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://weightMonitoringBrowse.caption"
        focusComponent="weightMonitoringsTable"
        messagesPack="com.company.medicalrecord.web.screens.weightmonitoring">
    <data readOnly="true">
        <collection id="weightMonitoringsDc"
                    class="com.company.medicalrecord.entity.monitoring.WeightMonitoring">
            <view extends="_local"/>
            <loader id="weightMonitoringsDl">
                <query>
                    <![CDATA[select e from medicalrecord_WeightMonitoring e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="weightMonitoringsTable"
            spacing="true">
        <groupTable id="weightMonitoringsTable"
                    width="100%"
                    dataContainer="weightMonitoringsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="value"/>
                <column id="unit"/>
                <column id="localDateTime"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="weightMonitoringsTable.create"/>
                <button id="editBtn" action="weightMonitoringsTable.edit"/>
                <button id="removeBtn" action="weightMonitoringsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>

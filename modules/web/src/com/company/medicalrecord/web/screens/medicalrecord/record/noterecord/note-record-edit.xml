<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://noteRecordEdit.caption"
        messagesPack="com.company.medicalrecord.web.screens.medicalrecord.record.noterecord">
    <data>
        <instance id="noteRecordDc"
                  class="com.company.medicalrecord.entity.record.NoteRecord">
            <view extends="_local"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="auto"
                width="auto"/>
    <layout expand="editActions" spacing="true">
        <hbox id="noteHBox" spacing="true">
            <vbox id="noteVBox" spacing="true">
                <label id="noteLabel" value="Note" stylename="bold h2"/>
                <textField id="nameField" dataContainer="noteRecordDc" property="name" inputPrompt="Name" width="400px"/>
                <textArea id="textAreaDescription" dataContainer="noteRecordDc" property="description" width="400px" height="75px" inputPrompt="Description"/>
            </vbox>
            <vbox id="creationInfoVBox" spacing="true">
                <label id="creationInfoLabel" value="Created By" stylename="bold h2"/>
                <dateField id="dateField" dataContainer="noteRecordDc" property="date"/>
            </vbox>
        </hbox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
